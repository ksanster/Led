<Skin xmlns="http://ns.adobe.com/mxml/2009"
	  alpha.disabledStates="0.5">

    <states>
        <State name="up" />
        <State name="over" stateGroups="overStates" />
        <State name="down" stateGroups="downStates" />
        <State name="disabled" stateGroups="disabledStates" />
        <State name="upAndSelected" />
        <State name="overAndSelected" stateGroups="overStates" />
        <State name="downAndSelected" stateGroups="downStates" />
        <State name="disabledAndSelected" stateGroups="disabledStates" />
    </states>
        
	<!-- Skin -->
	<Image left="0" verticalCenter="0" maintainAspectRatio="false"
			source.up="@Embed(source='/bluesteel/RadioButton_upIcon.png')"
			source.over="@Embed(source='/bluesteel/RadioButton_overIcon.png')"
			source.down="@Embed(source='/bluesteel/RadioButton_downIcon.png')"
			source.disabled="@Embed(source='/bluesteel/RadioButton_disabledIcon.png')"
			source.upAndSelected="@Embed(source='/bluesteel/RadioButton_selectedUpIcon.png')"
			source.overAndSelected="@Embed(source='/bluesteel/RadioButton_selectedOverIcon.png')"
			source.downAndSelected="@Embed(source='/bluesteel/RadioButton_selectedDownIcon.png')"
			source.disabledAndSelected="@Embed(source='/bluesteel/RadioButton_selectedDisabledIcon.png')"
    />

    <!-- Label -->
    <TextBox id="labelField"
             left="19" top="3" />

</Skin>
