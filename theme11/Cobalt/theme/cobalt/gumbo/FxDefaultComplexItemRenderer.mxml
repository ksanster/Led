<ItemRenderer xmlns="http://ns.adobe.com/mxml/2009">
	
    <states>
		<State name="normal"/>			
		<State name="hovered"/>
		<State name="selected"/>
	</states>
	
    <content>
		<Rect left="0" right="0" top="0" bottom="0">
			<fill>
				<SolidColor color="0xCCCCCC"
                            alpha="0" alpha.hovered="0.2" alpha.selected="0.8" />
			</fill>
		</Rect>
		<Group content="{data}" verticalCenter="0" left="2" right="2" top="2" bottom="2" />
	</content>

</ItemRenderer>
