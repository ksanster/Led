<Skin xmlns="http://ns.adobe.com/mxml/2009" 
      minWidth="23" minHeight="23"
      alpha.disabledStates="0.5">

    <states>
        <State name="up" />
        <State name="over" stateGroups="overStates" />
        <State name="down" stateGroups="downStates" />
        <State name="disabled" stateGroups="disabledStates" />
        <State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </states>

    <!-- Skin -->
    <Image left="0" top="0" right="0" bottom="0" maintainAspectRatio="false"
    	source.up="@Embed(source='/cobalt/Button_upSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.over="@Embed(source='/cobalt/Button_overSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.down="@Embed(source='/cobalt/Button_downSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.disabled="@Embed(source='/cobalt/Button_disabledSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.upAndSelected="@Embed(source='/cobalt/Button_selectedUpSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.overAndSelected="@Embed(source='/cobalt/Button_selectedOverSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.downAndSelected="@Embed(source='/cobalt/Button_selectedDownSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    	source.disabledAndSelected="@Embed(source='/cobalt/Button_selectedDisabledSkin.png',scaleGridTop='5',scaleGridLeft='5',scaleGridRight='59',scaleGridBottom='17')"
    />
    
    <!-- Label -->
    <TextBox id="labelField"
             horizontalCenter="0" verticalCenter="1"
             left="10" right="10" top="2" bottom="2"
             textAlign="center" verticalAlign="middle"
             color="0xD3E7F3"
             color.over="0xFFFFFF"
             color.down="0xFFFFFF"
             color.upAndSelected="0x77b1d2"
             color.overAndSelected="0xD3E7F3"
             color.downAndSelected="0x77b1d2">
    </TextBox>

</Skin>
