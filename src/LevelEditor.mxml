<?xml version="1.0"?>
<mx:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx"
                width="800" height="600" creationComplete="onCreationComplete(event)">

    <fx:Script><![CDATA[
		import com.tengu.tools.leditor.EditorContext;
		
		import mx.controls.Alert;
		import mx.events.FlexEvent;
		
		private var context:EditorContext;
		
		protected function onCreationComplete(event:FlexEvent):void
		{
			context = new EditorContext();
			context.configure(this);
			
			context.start();
		}
		
	]]>
    </fx:Script>

    <fx:Style source="theme/bluesteel.css" />


    <mx:Button click="Alert.show('Hello, world', 'title')" label="Say Hello"/>
</mx:Application>
