<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:selector="com.tengu.tools.leditor.view.controls.selector.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.tengu.tools.leditor.assets.AssetManager;
			import com.tengu.tools.leditor.assets.api.IAssetManager;
			
			[Bindable]
			private var manager:AssetManager = AssetManager.instance;
			
		]]>
	</fx:Script>
	
	<s:Label text="Select bitmap"/>
	<selector:ImageSelector dataProvider="{manager.assetCollection}" 
							width="100%"
							rowHeight="{manager.previewHeight}"
							columnWidth="{manager.previewWidth}"
							height="{manager.previewHeight + 5}" />
</s:VGroup>
