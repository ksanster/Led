<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.tengu.log.LogFactory;
			import com.tengu.tools.leditor.model.LayerInfo;
			import com.tengu.tools.leditor.model.LedModel;
			import com.tengu.tools.leditor.model.api.ILedModel;
			
			[Bindable]
			public var model:ILedModel = LedModel.instance;
			
			protected function onClickAddButton(event:MouseEvent):void
			{
				const info:LayerInfo = availableList.selectedItem as LayerInfo;
				LogFactory.getLogger(this).info("Layer added: " + info.type);				
			}
			
		]]>
	</fx:Script>
	
	<s:DataGrid dataProvider="{model.layers}" width="100%" height="150"/>
	<s:Label text="Новый слой"/>
	<s:HGroup width="100%" horizontalAlign="right">
		<s:DropDownList id="availableList" dataProvider="{model.availableLayerTypes}" width="150"/>
		<s:Button label="Добавить" click="onClickAddButton(event)" enabled="{availableList.selectedIndex != -1}"/>
	</s:HGroup>
</s:VGroup>
